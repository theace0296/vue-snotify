{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./demo-example/out-tsc",
    "baseUrl": "demo-example",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "target": "es5",
    "noStrictGenericChecks": true,
    "types": [
      "jasmine",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "exclude": [
    "src/vue.d.ts",
    "dist/**/*.ts"
  ],
  "include": [
    "example/test/**/*.ts",
    "src/index.ts",
    "src/snotify.d.ts"
  ]
}
